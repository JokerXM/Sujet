        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="showtrainer" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="search" HorizontalAlignment="Left" Height="23" Margin="46,43,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="217"/>
